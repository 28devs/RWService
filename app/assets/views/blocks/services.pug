#services.services
  .services__container.container
    .services__title.block-title Популярные услуги

    .services__tabs
      each name, i in servicesTabs
        .services__tabs-item.btn.btn--outline(@click="activeTabServices=" + i v-bind:class="{ active: activeTabServices === " + i + "}")= name

  .services__container.container
    .glide.services__slider
      .glide__track(data-glide-el='track')
        .glide__slides.services__slides

          .glide__slide.services__slide(v-for="service in services[activeTabServices]")
            .services__item
              .services__item-photo(v-bind:style="{ 'background-image': 'url(img/services/' + service.img + ')'}")
              .services__item-content
                .services__item-title(v-html="service.title")
                .services__item-text(v-html="service.time")
                .services__item-text Цена от: 
                  .services__item-price(v-html="service.price")

                .services__item-btn.btn.btn--outline-color(@click="activeModal = 'short-form'") Заказать

      .glide__bullets.services__bullets(data-glide-el='controls[nav]')
        .glide__bullet(data-glide-dir="=0")
        .glide__bullet(data-glide-dir="=1")
        .glide__bullet(data-glide-dir="=2")
        .glide__bullet(data-glide-dir="=3")

  .container
    .services__btn(@click="activeModal = 'all-price'")
      .btn.btn--outline Смотреть прайс-лист на все услуги

    .services__btn-mobile(@click="activeModal = 'short-form'")
      .btn.btn--outline Получить весь прайс-лист
